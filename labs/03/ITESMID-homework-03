#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

int main() {
    while (1) {
        char input[10];
        printf("Terminal Madafanes> ");
        scanf("%s", input);

        if (strcmp(input, "-_-") == 0) {
            printf("Bye -_-\n");
            break;
        }

        pid_t pid;
        int status;

        pid = fork();
        if (pid < 0) {
            perror("Fork fallÃ³");
            exit(1);
        } else if (pid == 0) {
            switch (input[0]) {
                case 'l':
                    execlp("ls", "ls", (char *)NULL);
                    break;
                case 'p':
                    execlp("pwd", "pwd", (char *)NULL);
                    break;
                case 'd':
                    execlp("date", "date", (char *)NULL);
                    break;
                default:
                    printf("Error: Comando Inexistente\n");
                    exit(1);
            }
        } else {
            wait(&status);
        }
    }

    return 0;
}
