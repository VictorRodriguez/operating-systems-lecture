//Codigo de miTerminal

#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    char cwd[1024];
    if (getcwd(cwd, sizeof(cwd)) == NULL) {
        perror("getcwd");
        return 1;
    }

    while (1) {
        char command[256];
        char *arguments[256];
        int argcounter = 0;

        printf("Terminal de Adair, ingresa un comando: ");
        fgets(command, sizeof(command), stdin);
        command[strlen(command) - 1] = '\0';

        if (strcmp(command, "exit") == 0) {
            break;
        }

        char *tok = strtok(command, " ");

        while (tok != NULL) {
            arguments[argcounter] = tok;
            argcounter++;
            tok = strtok(NULL, " ");
        }
        arguments[argcounter] = NULL;

        pid_t id = fork();

        if (id == -1) {
            perror("fork");
            return 1;
        } else if (id == 0) {
            if (execvp(arguments[0], arguments) == -1) {
                perror("execvp");
                return 1;
            }
        } else {
            int status;
            if (wait(&status) == -1) {
                perror("wait");
                return 1;
            }
        }
    }

    return 0;
}
